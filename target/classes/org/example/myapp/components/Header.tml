<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
<head>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .company-header {
            background-color: #333; /* Dark background color */
            color: #ffffff; /* White text color */
            padding: 20px;
            text-align: center;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            width: 100%;
            top: 0;
            margin-bottom:30px;
        }

        h1 {
            margin: 0;
            font-size: 24px;
        }

        p {
            margin: 0;
            font-size: 18px;
        }


    </style>
</head>
<body>
<div class="company-header">
    <div>
        <h1>${companyName}</h1>
    </div>
    <div>
        <p>${companyAddress}</p>
    </div>
</div>

</body>
</html>
